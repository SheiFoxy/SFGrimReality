<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThoughtDef>
		<defName>AteWithoutTable</defName>
		<durationDays>0.15</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>ate without table</label>
				<description>It would be more convenient to eat a table. Oh well.</description>
				<baseMoodEffect>-1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>SleepDisturbed</defName>
		<icon>Things/Mote/ThoughtSymbol/SleepZ</icon>
		<showBubble>true</showBubble>
		<durationDays>0.5</durationDays>
		<stackLimit>4</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stages>
			<li>
				<label>disturbed sleep</label>
				<description>People keep disturbing my sleep. How am I supposed to get a good night's rest like this?</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>NewColonyOptimism</defName>
		<durationDays>5</durationDays>
		<nextThought>NewColonyHope</nextThought>
		<stages>
			<li>
				<label>new colony optimism</label>
				<description>We have to found a new colony to survive. It's a tough situation, but if we work together, I know we can pull through... We've got this.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>NewColonyHope</defName>
		<durationDays>5</durationDays>
		<stages>
			<li>
				<label>new colony hope</label>
				<description>Things aren't so bad now that I'm getting used to them. It's still an exciting new situation, but it's not as easy as I'd hoped. It could still work out...</description>
				<baseMoodEffect>5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>SleptOutside</defName>
		<durationDays>0.3</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>slept outside</label>
				<description>I had to sleep outdoors without any protection from the elements.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>SleptOnGround</defName>
		<durationDays>0.3</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>slept on ground</label>
				<description>I wish I had a nice warm bed instead of the hard ground with a rock for a pillow.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>SleptInCold</defName>
		<durationDays>0.3</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>slept in the cold</label>
				<description>I had to sleep in the cold. We really need some heaters.</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>SleptInHeat</defName>
		<durationDays>0.3</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>slept in the heat</label>
				<description>I had to sleep in unbearable heat. Can't we have air conditioning?</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowPrisonerSold</defName>
		<durationDays>5</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>a prisoner was sold</label>
				<description>This colony sold a prisoner into slavery. That's a worrying thought.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowGuestOrganHarvested</defName>
		<durationDays>5</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>someone's organ harvested</label>
				<description>The colony took body parts from a guest or prisoner. It's horrible, breaking someone down for parts when they have no choice.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowColonistOrganHarvested</defName>
		<durationDays>7.5</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>colonist's organ harvested</label>
				<description>Someone took body parts from a colonist. How could they do that to one of our own??</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>MyOrganHarvested</defName>
		<durationDays>15</durationDays>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>my organ harvested</label>
				<description>The colony harvested body parts from me! How can I ever forgive them?</description>
				<baseMoodEffect>-30</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>WasImprisoned</defName>
		<durationDays>7.5</durationDays>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>was imprisoned</label>
				<description>The colony locked me up like an animal. I thought we were in this together.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>GreenThumbHappy</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>20</stackLimit>
		<stackedEffectMultiplier>1.0</stackedEffectMultiplier>
		<requiredTraits>
			<li>GreenThumb</li>
		</requiredTraits>
		<stages>
			<li>
				<label>sowed a plant</label>
				<description>One more little survivor. You can do it, little friend. </description>
				<baseMoodEffect>1</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>Catharsis</defName>
		<durationDays>3.5</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>1.0</stackedEffectMultiplier>
		<stages>
			<li>
				<label>catharsis</label>
				<description>It felt good to finally unbottle my feelings.</description>
				<baseMoodEffect>20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>Nuzzled</defName>
		<durationDays>0.5</durationDays>
		<stackLimit>10</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>nuzzled</label>
				<description>A cute animal nuzzled me. Cuddles make everything better.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowBuriedInSarcophagus</defName>
		<durationDays>3</durationDays>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<stackLimit>1</stackLimit>
		<stages>
			<li>
				<label>buried in sarcophagus</label>
				<description>We had to bury one of our own, but at least we could lay them to rest in an ornamented sarcophagus. May they rest in peace.</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<!-- ============== Human corpse butchering ===============-->

	<ThoughtDef>
		<defName>ButcheredHumanlikeCorpse</defName>
		<durationDays>7.5</durationDays>
		<stackLimit>5</stackLimit>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>I butchered humanlike</label>
				<description>I butchered someone up like an animal. What have I become?</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KnowButcheredHumanlikeCorpse</defName>
		<durationDays>5.0</durationDays>
		<stackLimit>1</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>We butchered humanlike</label>
				<description>We butchered someone up like an animal. How could we?</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>


	<!-- ============== Combat ============== -->

	<ThoughtDef>
		<defName>ObservedLayingCorpse</defName>
		<icon>Things/Mote/ThoughtSymbol/Skull</icon>
		<showBubble>true</showBubble>
		<thoughtClass>Thought_MemoryObservation</thoughtClass>
		<durationDays>0.15</durationDays>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stackLimit>4</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
			<li>Cannibal</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>observed corpse</label>
				<description>More death and decay... I wish I hadn't seen that.</description>
				<baseMoodEffect>-4</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ObservedLayingRottingCorpse</defName>
		<icon>Things/Mote/ThoughtSymbol/Skull</icon>
		<showBubble>true</showBubble>
		<thoughtClass>Thought_MemoryObservation</thoughtClass>
		<durationDays>0.15</durationDays>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stackLimit>4</stackLimit>
		<nullifyingTraits>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>observed rotting corpse</label>
				<description>I saw a rotting corpse laying on the ground. It was disgusting.</description>
				<baseMoodEffect>-8</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>WitnessedDeathAlly</defName>
		<icon>Things/Mote/ThoughtSymbol/Skull</icon>
		<showBubble>true</showBubble>
		<durationDays>1.0</durationDays>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stackLimit>3</stackLimit>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>witnessed ally's death</label>
				<description>I saw one of my people die. They were alive one moment, and dead the next.</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>WitnessedDeathNonAlly</defName>
		<icon>Things/Mote/ThoughtSymbol/Skull</icon>
		<showBubble>true</showBubble>
		<durationDays>1</durationDays>
		<stackLimit>3</stackLimit>
		<stackedEffectMultiplier>0.4</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>witnessed outsider's death</label>
				<description>I saw someone die. They were alive one moment, and dead the next.</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>WitnessedDeathFamily</defName>
		<icon>Things/Mote/ThoughtSymbol/Skull</icon>
		<showBubble>true</showBubble>
		<durationDays>1</durationDays>
		<stackLimit>3</stackLimit>
		<stackedEffectMultiplier>0.67</stackedEffectMultiplier>
		<nullifyingTraits>
			<li>Psychopath</li>
			<li>Bloodlust</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>witnessed family member's death</label>
				<description>A member of my family died right before my eyes...</description>
				<baseMoodEffect>-15</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>WitnessedDeathBloodlust</defName>
		<icon>Things/Mote/ThoughtSymbol/Skull</icon>
		<showBubble>true</showBubble>
		<durationDays>3</durationDays>
		<stackedEffectMultiplier>0.4</stackedEffectMultiplier>
		<stackLimit>13</stackLimit>
		<requiredTraits>
			<li>Bloodlust</li>
		</requiredTraits>
		<stages>
			<li>
				<label>witnessed death with bloodlust</label>
				<description>Someone died and I was lucky enough to see it happen!</description>
				<baseMoodEffect>3</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>KilledHumanlikeBloodlust</defName>
		<icon>Things/Mote/ThoughtSymbol/Skull</icon>
		<showBubble>true</showBubble>
		<durationDays>3</durationDays>
		<stackedEffectMultiplier>0.2</stackedEffectMultiplier>
		<stackLimit>16</stackLimit>
		<requiredTraits>
			<li>Bloodlust</li>
		</requiredTraits>
		<stages>
			<li>
				<label>killed someone</label>
				<description>I killed someone! It felt so...satisfying!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>DefeatedHostileFactionLeader</defName>
		<icon>Things/Mote/ThoughtSymbol/Enemy</icon>
		<showBubble>true</showBubble>
		<durationDays>3</durationDays>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>defeated hostile leader {0}</label>
				<description>I defeated the enemy's leader! The colony is safer now because of me! I'm a hero!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>DefeatedMajorEnemy</defName>
		<icon>Things/Mote/ThoughtSymbol/Enemy</icon>
		<showBubble>true</showBubble>
		<durationDays>3</durationDays>
		<stackedEffectMultiplier>0.5</stackedEffectMultiplier>
		<stackLimit>5</stackLimit>
		<stages>
			<li>
				<label>defeated {0}</label>
				<description>I kept the colony safe by defeating a threatening foe! I feel like a hero!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>
  
  <!-- Banishing pawns -->

  <ThoughtDef>
    <defName>ColonistBanished</defName>
    <durationDays>7.5</durationDays>
    <stackLimit>3</stackLimit>
		<showBubble>true</showBubble>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>colonist banished</label>
        <description>We banished one of our own. I hope it was the right thing to do.</description>
        <baseMoodEffect>-4</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>ColonistBanishedToDie</defName>
    <durationDays>7.5</durationDays>
    <stackLimit>3</stackLimit>
		<showBubble>true</showBubble>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>colonist banished and left to die</label>
        <description>We banished one of our. I can't help feeling we've sent them to their death. What if we were wrong?</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>PrisonerBanishedToDie</defName>
    <durationDays>3</durationDays>
    <stackLimit>5</stackLimit>
		<showBubble>true</showBubble>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>prisoner banished and left to die</label>
        <description>We sent a prisoner away from the colony and I don't think they'll make it. Was that...right?</description>
        <baseMoodEffect>-1</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>BondedAnimalBanished</defName>
    <durationDays>7.5</durationDays>
    <stackLimit>5</stackLimit>
		<showBubble>true</showBubble>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <nullifyingTraits>
      <li>Psychopath</li>
    </nullifyingTraits>
    <stages>
      <li>
        <label>bonded animal {0} banished</label>
        <description>My pet was banished from the colony! How could they do this to me?</description>
        <baseMoodEffect>-5</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <!-- Rescue quest -->

  <ThoughtDef>
    <defName>FailedToRescueRelative</defName>
    <durationDays>15</durationDays>
    <stackLimit>3</stackLimit>
	<showBubble>true</showBubble>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stages>
      <li>
        <label>failed to rescue {0}</label>
        <description>We failed to rescue one of my relatives. Knowing that I could have helped him makes it even harder to cope with the death of my loved one.</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>RescuedRelative</defName>
    <durationDays>15</durationDays>
    <stackLimit>3</stackLimit>
	<showBubble>true</showBubble>
    <stackedEffectMultiplier>0.5</stackedEffectMultiplier>
    <stages>
      <li>
        <label>rescued {0}</label>
        <description>We rescued one of my relatives! I'm so relieved they're safe and sound!</description>
        <baseMoodEffect>10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

</Defs>
